#!/usr/bin/bash
sudo pacman -S git zsh fish neovim exa htop neofetch wget curl  man-db tmux pulseaudio pacman-contrib
sudo pacman -S lightdm lightdm-gtk-greeter lightdm-gtk-greeter-settings lxsession lxappearance volumeicon nitrogen
sudo pacman -S bspwm sxhkd rofi plank alacritty thunar qt5ct vlc xterm qbittorrent dunst scrot network-manager-applet nodejs npm
git clone https://aur.archlinux.org/pikaur.git $HOME/pikaur
cd $HOME/pikaur
makepkg -si
cd ..
pikaur -S --noconfirm polybar google-chrome visual-studio-code-bin zoom slack-desktop appimagelauncher vim-plug blight betterlockscreen picom-ibhagwan-git zsh-autosuggestions zsh-syntax-highlighting-git zsh-theme-powerlevel10k starship
pikaur -S --noconfirm ttf-font-awesome ttf-meslo-nerd-font-powerlevel10k ttf-ubuntu-font-family ttf-roboto-mono ttf-icomoon-feather
pikaur -S nerd-fonts-iosevka nerd-fonts-mononoki palenight-gtk-theme terminus-font qt5-styleplugins
pikaur -S --noconfirm pamac-all insomnia mariadb mongodb-bin obs-studio